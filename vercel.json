{
  "version": 2,
  "public": true,
  "rewrites": [
    { "source": "/admin", "destination": "/admin.html" },
    { "source": "/admin-login", "destination": "/admin-login.html" },
    { "source": "/purchases", "destination": "/purchases.html" },
    { "source": "/payment-process", "destination": "/payment-process.html" },
    { "source": "/payment-return", "destination": "/payment-return.html" }
  ],
  "env": {
    "FIREBASE_SERVICE_ACCOUNT": "@firebase-service-account",
    "PAYSTACK_SECRET_KEY": "@paystack-secret-key"
  }
}